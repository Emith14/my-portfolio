    {skills.map(s => (
      <div class="skill">
        <div style="width:46px;height:46px;border-radius:10px;background:linear-gradient(135deg,var(--accent),var(--accent-2));display:flex;align-items:center;justify-content:center;color:#021018">
          <span set:html={s.svg} style="width:22px;height:22px; color:#021018"></span>
        </div>
        <div style="font-weight:700;color:#dff9ff">{s.name}</div>
        <div style="font-size:13px;color:var(--muted)">Experiencia real en proyectos</div>
      </div>
    ))}
  </div>
</section>
